<Window x:Class="MyAnimeGuide.SelectChWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAnimeGuide"
        xmlns:vm = "clr-namespace:MyAnimeGuide.ViewModel"
        mc:Ignorable="d"
        Title="SelectChWindow" Height="300" Width="300">
    <Window.DataContext>
        <vm:SelectChWindowViewModel x:Name="ViewModel" />
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding Path=AllChList}" x:Name="listBox" HorizontalAlignment="Left" Height="Auto" Margin="10,10,0,0" VerticalAlignment="Top" Width="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ChName}"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
