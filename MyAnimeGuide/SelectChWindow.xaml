<Window x:Class="MyAnimeGuide.SelectChWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAnimeGuide"
        xmlns:vm = "clr-namespace:MyAnimeGuide.ViewModel"
        mc:Ignorable="d"
        Title="SelectChWindow" Height="300" Width="300">
    <Window.DataContext>
        <vm:SelectChWindowViewModel x:Name="ViewModel" />
    </Window.DataContext>
    <Grid>
        <TreeView Name="ChDataTree" ItemsSource="{Binding AllChGroupPairs}">
            <TreeView.ItemTemplate>
                <DataTemplate>
                    <TreeViewItem Header="{Binding ChGroupData.ChGroupID}" ItemsSource="{Binding ChildChDataList}">
                        <TreeViewItem.ItemTemplate>
                            <DataTemplate>
                                <TreeViewItem Header="{Binding ChName}" />
                            </DataTemplate>
                        </TreeViewItem.ItemTemplate>
                    </TreeViewItem>
                </DataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>
