<Window x:Class="MyAnimeGuide.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAnimeGuide"
        mc:Ignorable="d"
        Title="MyAnimeGuide" Height="350" Width="525">
    <Grid>
        <ListView Name="AnimeList" ItemsSource="{Binding}" VerticalAlignment="Top"  Margin="0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding title}" Header="タイトル"/>                    
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
